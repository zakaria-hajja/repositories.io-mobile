<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zakaria.repositories.ui.fragment.RepositoryDetailsFragment">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/iv_repo"
                android:layout_width="@dimen/image_large"
                android:layout_height="@dimen/image_large"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="@dimen/margin_normal"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_large"
                android:layout_alignTop="@+id/iv_repo"
                android:layout_toRightOf="@+id/iv_repo"
                android:text="KOTLIN DEVS"
                android:textColor="#FFF"
                android:textStyle="bold"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:layout_below="@+id/tv_repo_title"
                android:layout_alignLeft="@+id/tv_repo_title"
                android:text="HMED"
                android:textColor="#FFF"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:layout_below="@+id/tv_owner_name"
                android:layout_alignLeft="@+id/tv_owner_name"
                android:text="Joined at Nov 8,2014"
                android:textColor="#FFF"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
